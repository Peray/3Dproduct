$(document).on('click', '.remove', function () {
    var idx = $(this).parent().prevAll().length;
    $(this).parent().remove(); 
    var al = $('#arlt').val().split('img');
    al.splice(idx, 1);
    var values = "";
    for (var i = 1; i < al.length; i++) {
        values +="img" +al[i];
    }
    $('#arlt').val(values);
});

$(document).on('click', '.removePic', function () {
