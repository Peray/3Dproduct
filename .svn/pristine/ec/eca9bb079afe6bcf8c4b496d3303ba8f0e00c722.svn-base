 .tips{
 	position: absolute;
 	display:none;
 	top: 20px;
 	left: 50%;
 	margin-left: -245px;
 	height: 50px;
 	line-height:50px;
 	font-size: 16px;
 	border-radius: 5px;
 	padding: 10px;
 	color:#fff;
 	background-color:rgba(0,0,0,.6)
 }
 .tips>span{
 	position:absolute;
 	top:0;
 	right:0;
 	width:14px;
 	height:14px;
 	background: url(../img/icon.png) -51px -7px no-repeat;
 	cursor:pointer;
 }
 .search{
	position: absolute;
	z-index: 111;
	top: 130px;
	left: 50%;
	margin-left: -480px;
	/*padding: 40px 0;*/
}
 figcaption{
	font-size: 22px;
	text-align: center;
	color: #8a92a5;
 }
 .saw{
	position: relative;
	padding: 75px 0 0;
	display:inline-block;
 }
 .saw > li{
	height: 260px;
	cursor: pointer;
	text-align: center;
 }
 .saw > li:hover figcaption{
	color: #115a9f;
 }
 figure{
	width: 192px;
 }
 figure > img{
	width: 132px;
	height: 132px;
 }
 .detial{
	line-height: 60px;
	position: absolute;
	top: 270px;
	left: 25px;
	display: none;
	box-sizing: border-box;
	width: 540px;
	height: 60px;
	text-align: center;
	border: 1px solid #b1b8be;
 }
 .detial > a{
	font-size: 18px;
	display: inline-block;
	padding: 0 35px;
	color: #115a9f;
 }
 .detial > span{
	position: absolute;
	z-index: 1;
	top: -11px;
	left: 50px;
	width: 20px;
	height: 20px;
	-webkit-transform: rotate(45deg);
	-ms-transform: rotate(45deg);
	-o-transform: rotate(45deg);
	transform: rotate(45deg);
	border: 1px solid #b1b8be;
	border-right: none;
	border-bottom: none;
	background-color: #fff;
 }

