.user{
	text-align: right;
	line-height: 40px;
	font-size:16px;
}
table{
	width: 100%;
}
.caption{
	text-align: right;
	margin-bottom:20px;
}
.caption button{
	background-color:#43A9D9;
	color:#fff;
	width:160px;
	height:40px;
	text-align: center;
	line-height: 40px;
	font-size:18px;
	cursor: pointer;
	border:none;
	border-radius:5px;
	outline: none;
}
.caption button:active{
	background-color:#0F87BF;
}

table td,
table th{
	font-size:16px;
	border:1px solid #D4D4D4;
	text-align: center;
}
table td{
	line-height:50px;
}
table th{
	background-color:#E0ECFA;
	line-height:35px;
}
table td:last-child>span{
	cursor: pointer;
}
td.warn{
	color:red;
}