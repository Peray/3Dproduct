 figcaption{
 	font-size: 22px;
 	text-align: center;
 	color: #8a92a5;
 }
 .saw{
 	position: relative;
 	padding: 75px 0 30px;
 }
 .saw > li{
 	height: 260px;
 	cursor: pointer;
 	text-align: center;
 }
 .saw > li:hover figcaption{
 	color: #115a9f;
 }
 figure{
 	width: 192px;
 }
 figure > img{
 	width: 132px;
 	height: 132px;
 }
 .detial{
 	line-height: 60px;
 	position: absolute;
 	top: 270px;
 	left: 25px;
 	display: none;
 	box-sizing: border-box;
 	width: 540px;
 	height: 60px;
 	text-align: center;
 	border: 1px solid #b1b8be;
 }
 .detial > a{
 	font-size: 18px;
 	display: inline-block;
 	padding: 0 35px;
 	color: #115a9f;
 }
 .detial > span{
 	position: absolute;
 	z-index: 1;
 	top: -11px;
 	left: 50px;
 	width: 20px;
 	height: 20px;
 	-webkit-transform: rotate(45deg);
 	-ms-transform: rotate(45deg);
 	-o-transform: rotate(45deg);
 	transform: rotate(45deg);
 	border: 1px solid #b1b8be;
 	border-right: none;
 	border-bottom: none;
 	background-color: #fff;
 }

