*{
    margin: 0;
    padding: 0;
    list-style: none;
}
.out{
    position: relative;
    width: 100%;
    height: 300px;
    background-color: #0069b5;
}
.tu li{
	position: absolute;
	top: 0;
	right: 0;
	display: none;
	width:1280px;
	height: 300px;
}
.tu > li >a> img{
	width:1280px;
    height:300px;
}
.shu{
    font-size: 0;
    position: absolute;
    bottom: 10px;
    left: 0;
    width: 100%;
    text-align: right;
}
.shu li{
    font-size: 14px;
    line-height: 20px;
    display: inline-block;
    width: 40px;
    height: 20px;
    margin: 0 5px;
    cursor: pointer;
    text-align: center;
    color: #fff;
    background: #333;
}
.shu li.active{
    background: #a00;
}
.out .btn{
    font-size: 20px;
    line-height: 60px;
    position: absolute;
    top: 50%;
    width: 30px;
    height: 60px;
    margin-top: -30px;
    cursor: pointer;
    text-align: center;
    color: #fff;
    background: rgba(0,0,0,.3);
}
.out .left{
    left: 0;
}
.out .right{
    right: 0;
}
