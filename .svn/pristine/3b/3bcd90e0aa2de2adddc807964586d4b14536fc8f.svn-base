 /* 分页样式*/
 #pagination2{
 	padding-left: 0;
 	margin: 1.5rem 0;
 	list-style: none;
 	color: #999;
 	text-align: right;
 }
 #pagination2>li{
 	display: inline-block;
 }
 #pagination2 li a{
 	padding: 4px 8px;
 }
 #pagination2>li>a{
 	position: relative;
 	display: inline-block;
 	padding: .5em 1em;
 	text-decoration: none;
 	line-height: 1.2;
 	background-color: #fff;
 	border: 1px solid #ddd;
 	border-radius: 0;
 	margin-bottom: 5px;
 	margin-right: 5px;
 }
 #pagination2>li.am-active>a{
 	z-index: 2;
 	color: #fff;
 	background-color: #0e90d2;
 	border-color: #0e90d2;
 	cursor: default;
 }
 #pagination2>li.am-disabled>a{
 	color: #999;
 	background-color: #fff;
 	border-color: #ddd;
 	cursor: not-allowed;
 	pointer-events: none;
 }
